<head>
    <title>Update-Event-Character</title>
    <style>
        form#update-eventCharacter {
            border: 5px;
            border-style: solid;
            border-color: black;
            padding: 10px;
            background-color: white;
            opacity: 0.9;
            display: inline-block;
        }

        body {
            background: url("http://i.imgur.com/HEXg8Pc.jpg");
            background-size: 95%;
        }

        div.centerThis {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container" class="insertEventCharacter">
        <div class="centerThis">

            <form action = "/event_characters" method = "put" id="update-eventCharacter">

                <h2 style="text-center">Update Event/Character Relationship</h2>

                <div class="form-group">
                    <label for='event_id'>Event</label>
                    <select name='event_id' class='custom-select' id='event-selector'>
                        {{#each events}}
                        <option value="{{fromEvent_id}}">{{name}}</option>
                        {{/each}}
                        <option value=''>none</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for='character_id'>Characters</label>
                    <select name="character_id" class='custom-select' id='character-selector'>
                        {{#each characters}}
                        <option value="{{id}}">{{fname}} {{lname}}</option>
                        {{/each}}
                        <option value=''>none</option>
                    </select>
                </div>

                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="updateEventCharacter({{event_character.id}})">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

<script defer>
    selectEvent({{ event_character.event_id }});
    selectCharacter({{ event_character.character_id }});
</script>

<head>
    <title>Events</title>
    <style>
        #insertEvent {
            border: 5px;
            border-style: solid;
            border-color: black;
            padding: 10px;
            background-color: white;
            opacity: 0.9;
        }
        body {
            background: url("https://cdn1.vox-cdn.com/assets/4229567/game-of-thrones-poster_85627-1920x1200.jpg");
            background-size: 100%;
        }
    </style>

</head>

    <div class="container" id='insertEvent'>
        <form id="update-event">
            <h2 class='text-center'>Event Update Form</h2>
            <div class="form-group">
                <label for='name'>Event Name</label>
                <input class='form-control' type="text" name="name" maxlength="30" value="{{event.name}}" required>
            </div>
        
            <div class="form-group">
                <label for='location'>Location</label>
                <select name='location' class='custom-select' id='location-selector'>
                    {{#each locations}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                    <option value=''>none</option>
                </select>
            </div>
        
            <div class="form-group">
                <label>Season</label>
                <input class='form-control' type="number" name="season" maxlength="30" value="{{event.season}}">
            </div>
        
            <div class="form-group">
                <label>Episode</label>
                <input class='form-control' type="number" name="episode" maxlength="30" value="{{event.episode}}">
            </div>
        
            <div class="form-group"><label>Summary</label>
                <textarea class='form-control' name="summary" id="summary" rows="3" maxlength="3000" >{{event.summary}}</textarea>
            </div>
        
            <button class="btn btn-primary" onclick="updateEvent({{event.id}})">Submit</button>
        </form>    
    </div>

<script defer>
    selectLocation({{event.location}});
</script>

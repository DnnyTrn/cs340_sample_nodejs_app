<head>
    <title>Update-House</title>
    <style>
        form#update-house {
            border: 5px;
            border-style: solid;
            border-color: black;
            padding: 10px;
            display: inline-block;
            background-color: white;
            opacity: 0.9;
        }

        div.centerThis {
            text-align: center;
        }
        body {
            background-image: url("https://s20.postimg.cc/vfl2h6pbh/game_of_thrones_house_flags_wallpaper_3201.jpg");
        }
    </style>
</head>
<body>
    <div class="container" class="insertHouse">
        <div class="centerThis">

            <form action = "/houses" method = "put" id="update-house">

                <h2 style="text-center">Noble House Insert Form</h2>

                <div class="form-group">
                    <label for='name'>Name</label>
                    <input id='name' class='form-control' type="text" name="name" maxlength="30" value="{{house.name}}"required>
                </div>

                <div class="form-group">
                    <label for='sigil'>Sigil</label>
                    <input class='form-control' type="text" name="sigil" maxlength="30" value='{{house.sigil}}'>
                </div>

                <div class="form-group">
                    <label for='head'>Head</label>
                    <select name="head" class='custom-select' id='character-selector'>
                    {{#each characters}}
                    <option value="{{id}}">{{fname}} {{lname}}</option>
                        {{/each}}
                        <option value=''>none</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <select name="status_id" class='custom-select' id='status-selector'>
                        {{#each status}}
                        <option value="{{status_id}}">{{status}}</option>
                        {{/each}}
                    </select>
                </div>


                    <div class="modal-footer">
                        <button class="btn btn-primary" onclick="updateHouse({{house.id}})">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

<script defer>
    selectStatus({{ house.status_id }});
    selectCharacter({{ house.head }});
</script>
